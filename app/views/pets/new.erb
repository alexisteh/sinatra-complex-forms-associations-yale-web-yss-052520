<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="pet_name">
  <br/>
  <label>Owner:</label>
  <br/>
  <p>Pick an existing owner: </p>
    <% @owners.each do |owner| %>
        <input type="radio" id="<%=owner.id%>" name="owner_id" value="<%=owner.id%>">
        <%=owner.name%> 
        <br/>
    <%end%> 
    <input type="radio" id="none" name="owner_id" value="none">none<br/>

  <p>Or make a new owner: </p>
  <input type="text" name="owner_name">  

  <input type="submit" value="Create Pet">
</form>

